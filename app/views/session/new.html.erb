<h2>ログイン</h2>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post do %>
  <div>
    <%= label_tag :user_id, "ユーザーID" %><br>
    <%= text_field_tag :user_id, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div style="margin-top: 10px;">
    <%= submit_tag "ログイン" %>
  </div>
<% end %>

<p style="margin-top: 10px;">
  <%= link_to "ユーザー登録はこちら", new_user_path %>
</p>