<%= form_with(model: @user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "Save changes" %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "パスワード確認" %>
  <%= f.password_field :password_confirmation %>


<% end %>