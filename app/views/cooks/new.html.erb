<h1>今日の体調・気分を選んでください</h1>

<%= form_with model: @cook, url: cooks_path, local: true do |f| %>

  <% moods = [
    "頭痛い", "ストレス", "やる気なし", "食欲低下", "集中できない",
    "胃もたれ", "風邪気味", "眠れない", "冷え性", "肩・首のこり"
  ] %>

  <% moods.each do |mood| %>
    <div>
      <%= f.radio_button :health, mood %>
      <%= f.label :health, mood %>
    </div>
  <% end %>

  <hr>

  <label>つらさレベル</label><br>
  <input type="range" name="cook[level]" min="1" max="3" value="1" id="level">
  <span id="level-value">1</span>

  <br><br>
  <%= f.submit "決定" %>

<% end %>

<script>
const slider = document.getElementById("level");
const value  = document.getElementById("level-value");

slider.addEventListener("input", () => {
  value.textContent = slider.value == 3 ? "MAX" : slider.value;
});
</script>
